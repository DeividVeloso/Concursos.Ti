<div class="container mainContainer">
    <form id="formHourToMinutes" method="post" action="/CalcHourToMinutes/Index" onclick="return false">
        <div class="row">
            <div class="horas col-xs-2 col-md-2">
                <div class="form-group">
                    <label>Horas</label>
                    <input class="form-control" type="text" name="Hour" value="" placeholder="00" />

                </div>
            </div>
            <div class="doisPontos col-xs-2 col-md-1">
                <div class="form-group">
                    <span> : </span>
                </div>
            </div>
            <div class="minutos col-xs-2 col-md-2">
                <div class="form-group">
                    <label>Minutos</label>
                    <input class="form-control" type="text" name="Minutes" value="" placeholder="59" maxlength="10" />
                </div>
            </div>
            <div class="col-xs-2 col-md-5">
                <div class="form-group">
                    <label>Resultado</label>
                    <input class="form-control" type="text" name="Resultado" value="" readonly />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <input id="btnEnviaHoras" type="submit" class="btn btn-success" onclick="return false" />
            </div>
        </div>
    </form>
</div>

