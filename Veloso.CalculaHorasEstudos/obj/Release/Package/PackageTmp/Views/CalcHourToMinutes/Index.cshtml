@{
    ViewBag.Title = "";
}

<h2>Converte Horas para Minutos</h2>

@section scripts{
    <!--Ainda nao criamos este script, criaremos na proxima etapa -->
   
    <script src="~/Scripts/HourToMinutes/HourToMInutes.js"></script>
    <script>
    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
