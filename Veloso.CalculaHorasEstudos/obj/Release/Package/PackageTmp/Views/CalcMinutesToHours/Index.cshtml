@{
    ViewBag.Title = "Index";
}

<h2>Converte Minutos para Hora</h2>

@section scripts{
    <!--Ainda nao criamos este script, criaremos na proxima etapa -->
    <script src="~/Scripts/MinutesToHours/MinutesToHours.js"></script>
}


<div class="container mainContainer">
    <form id-"formminutestohour" method="post" action="/CalcMinutesToHours/Index" onsubmit="return false">
        <div class="row">
            <div class="minutos col-xs-2 col-md-2">
                <div class="form-group">
                    <label>Minutos</label>
                    <input class="form-control" type="text" name="Minutes" value="" placeholder="59" />
                </div>
            </div>
            <div class="col-xs-2 col-md-5">
                <div class="form-group">
                    <label>Resultado</label>
                    <input class="form-control" type="text" name="Resultado" value="" readonly />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <input id="btnEnviaMinutos" type="submit" class="btn btn-success" onclick="return false" />
            </div>
        </div>
    </form>
</div>

